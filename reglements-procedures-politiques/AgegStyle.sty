\newcommand{\article}[1]{
	\stepcounter{article}
	\subsection{Art. \arabic{chapter}.\arabic{article}~: #1}
	\addcontentsline{toc}{subsubsection}{#1}
	\setcounter{sousarticle}{0}
	\setcounter{alinea}{0}
}
\newcommand{\sousarticle}[1]{
	\stepcounter{sousarticle}
	\subsubsection{Art. \arabic{chapter}.\arabic{article}.\arabic{sousarticle}~: #1}
	\setcounter{alinea}{0}
}
\newcommand{\alinea}[1]{
	\stepcounter{alinea}
	\paragraph{\alph{alinea})}~#1
}
\newcommand{\sousalinea}[1]{
	\stepcounter{sousalinea}
	\subparagraph{\arabic{sousalinea}.}~#1
}
\newcommand{\adoption}[2]{
