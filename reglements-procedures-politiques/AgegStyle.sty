\newcounter{annexe}
\NewDocumentCommand{\annexe}{mo}{
	\clearpage
	\renewcommand{\theannexe}{\Alph{annexe}}
	\refstepcounter{annexe}\IfNoValueTF{#2}{}{\label{anx:#2}}
	\addcontentsline{toc}{chapter}{\theannexe \hspace{2em} #1}
	\vspace*{\fill}
